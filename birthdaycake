#include <assert.h>
#include <limits.h>
#include <math.h>
#include <stdbool.h>
#include <stddef.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void cake(int n, int a[])
{
    int count=0;
    int temp= a[0],max;
    for(int i=1;i<n;i++)
    {
       if (a[i]>temp)
       {
          temp=a[i];
          
       } 
       max=temp;
    }
    for(int i=0;i<n;i++)
    {

        if (a[i]==max)
        count++;
    }
    printf("%d",count);
}

int main()
{
    int n, a[1000000];
    scanf ("%d", &n);
    for (int i=0;i<n;i++)
        {
            scanf("%d",&a[i]);
         }
    cake(n,a);

}
